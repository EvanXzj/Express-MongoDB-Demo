extends layout

block content
	div#content.bs-docs-header
		div.container
			h1 添加一条数据
	div.container
		div.row
			form(method="post" class="form-horizontal" role="form")
				div.form-group
					label(for="uid" class="col-sm-1 control-label") ID:
					div.col-sm-5
						input(type="text" ,name="uid", id="uid",class="form-control" ,placeholder="uid")
				div.form-group
					label(for="inputTitle" class="col-sm-1 control-label") Title:
					div.col-sm-5
						input(type="text" ,name="title", id="inputTitle",class="form-control" ,placeholder="title")
				div.form-group
					label(for="inputContent" class="col-sm-1 control-label") Content:
					div.col-sm-5
						textarea(type="text" ,name="content", id="inputContent",class="form-control" ,placeholder="Content",rows="5")
				div.form-group
					div.col-sm-5.col-sm-offset-1
						input(type="submit",class="btn btn-primary" value="提交" style="margin-right:6px;")
						input(type="reset",class="btn btn-default" value="重置")
