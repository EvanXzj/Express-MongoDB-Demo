extends layout

block content
	div#content.bs-docs-header
		div.container
			h1 修改数据
	div.container
		div.row
			form(method="post",class="form-horizontal" role="form")
				div.form-group
					label(for="uid",class='col-sm-1 control-label') Uid:
					div.col-sm-5
						input(type="text",name="uid",id="uid",class="form-control",placeholder="uid",value="#{demos.uid}")
				div.form-group
					label(for="title",class='col-sm-1 control-label') Title:
					div.col-sm-5
						input(type="text",name="title",id="title" ,class="form-control",placeholder="title",value="#{demos.title}")
				div.form-group
					label(for="content",class='col-sm-1 control-label') Content:
					div.col-sm-5
						textarea(type="text",name="content",id="content",class="form-control",placeholder="content",rows="5") #{demos.content}
				div.form-group
					div.col-sm-5.col-sm-offset-1
						input(type="hidden",name="id" value="#{demos.id}")
						input(type="submit",class="btn btn-primary",value="修改",style="margin-right:6px;")
				div.form-group
					a(href='/') 返回主页